@model BarangayBagbag.Models.Announcement

@{
    ViewBag.Title = "Edit Announcement";
}

<nav class="bg-green-800 text-white ">
    <div class="max-w-6xl mx-auto w-full px-6 h-16 flex justify-between items-center">
        <div class="flex items-center gap-2">
            <img class="h-10" src="~/Image/Quezon_City.svg.png" />
            <h1 class="text-2xl font-semibold">Barangay Bagbag</h1>
        </div>
        <ul class="flex gap-10">
            <li>
                Home
            </li>
            <li>
                @Html.ActionLink("About Us", "AboutUs", "Bagbag")
            </li>
            <li>
                Services
            </li>
            <li>
                @Html.ActionLink("Announcements", "Announcements", "Bagbag")
            </li>
            <li>
                Scholarships
            </li>
            <li>
                @Html.ActionLink("Logout", "Logout", "Login")
            </li>
        </ul>
    </div>
</nav>

<main class="min-h-[calc(100svh_-_16rem)] max-w-6xl mx-auto px-6 text-gray-700 pt-12 pb-24">
    <header class="flex justify-between mb-3">
        <h2 class="text-2xl font-semibold">Edit Announcement</h2>
        <p>
            @Html.ActionLink("« Back", "Index", null, new { @class = "font-medium hover:underline" })
        </p>
    </header>

    @using (Html.BeginForm("Edit", "ManageAnnouncements", FormMethod.Post, new { @class = "max-w-xl mx-auto" }))
    {
        @Html.AntiForgeryToken()

<div class="">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.id)
    @Html.HiddenFor(model => model.createdAt)

    <div class="grid mb-3">
        <label class="font-medium">Title:</label>
        @Html.EditorFor(model => model.title, new { htmlAttributes = new { @class = "block w-full px-4 py-2 mt-2 text-gray-700 placeholder-gray-500 bg-white border rounded-lg focus:border-blue-400 focus:ring-opacity-40 focus:outline-none focus:ring focus:ring-blue-300" } })
        @Html.ValidationMessageFor(model => model.title, "", new { @class = "text-red-500 mt-1" })
    </div>

    <div class="grid mb-3">
        @Html.LabelFor(model => model.imgUrl, new { @class = "font-medium" })
        @Html.EditorFor(model => model.imgUrl, new { htmlAttributes = new { @class = "block w-full px-4 py-2 mt-2 text-gray-700 placeholder-gray-500 bg-white border rounded-lg focus:border-blue-400 focus:ring-opacity-40 focus:outline-none focus:ring focus:ring-blue-300" } })
        @Html.ValidationMessageFor(model => model.imgUrl, "", new { @class = "text-red-500 mt-1" })
    </div>

    <div class="grid mb-3">
        <label class="font-medium">Description:</label>
        @Html.EditorFor(model => model.description, new { htmlAttributes = new { @class = "block w-full px-4 py-2 mt-2 text-gray-700 placeholder-gray-500 bg-white border rounded-lg focus:border-blue-400 focus:ring-opacity-40 focus:outline-none focus:ring focus:ring-blue-300" } })
        @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-red-500 mt-1" })
    </div>

    <div class="text-right">
        <button class="px-4 py-2 font-medium tracking-wide text-white capitalize transition duration-200 bg-blue-500 rounded-lg hover:bg-blue-400 focus:outline-none focus:ring focus:ring-blue-300 focus:ring-opacity-50">
            Save
        </button>
    </div>
</div>
        <div class="mb-3 text-center text-red-500">
            @Html.ValidationSummary(true)
        </div>
    }
</main>
